@model List<DVDRental2.Models.Domain.Moive>
@{
}
<h1 class="text-center">Movie Zone</h1><br />
<table class="table">

    <thead>
        <tr>
            
            <th>Movie Title</th>
            <th>Movie Description</th>
            <th>Genre</th>
            <th>Release Date</th>
            <th>Director's Name</th>
            <th>Lead Actor/Actress(Star)</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
